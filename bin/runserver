#!/bin/bash

tmux rename-window server
tmux send-keys "cd ~/clio/themis"
tmux send-keys Enter
tmux send-keys "$HOME/clio/themis/script/resque" C-m
tmux split-window -v
tmux send-keys "cd ~/clio/themis/components/manage/" C-m
tmux send-keys Enter
tmux send-keys "$HOME/clio/themis/components/manage/bin/webpack-dev-server" C-m
tmux split-window -v
tmux send-keys "cd ~/clio/themis"
tmux send-keys Enter
tmux send-keys "$HOME/clio/themis/bin/rails s -b 'app.myclio.ca'" C-m
tmux select-layout even-vertical
